<%= flash[:alert] %>

<% @errors.each do |msg| %>
      <li><%= msg %></li>
<%end%>

<%= form_for @user do |f| %>
  <%= f.label :name %> 
  <%= f.text_field :name%><br>
  <%= f.label :email %> 
  <%= f.text_field :email%><br>
  <%= f.label :password %>   
  <%= f.password_field :password%><br>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= submit_tag "Submit User" %>
<% end %>