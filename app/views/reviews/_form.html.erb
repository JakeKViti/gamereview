<%= render partial: "layouts/errors", locals: { object: @review } %>

</br>

<%= form_for @review do |f| %>
  <%= f.label :title %> 
  <%= f.text_field :title%><br>
  <%= f.label :body %> 
  <%= f.text_field :body%><br>
  <%= f.label :rating %> 
  <%= f.number_field :rating%><br>
  <%= hidden_field_tag "review[game_id]", new_or_update?%>
  <% if new_game?%>
    <%= f.fields_for :game, @review.build_game do |g|%>
      <%= g.hidden_field :id%><br>
      <%= g.label :title %>
      <%= g.text_field :title%><br>
      <%= g.label :genre %>
      <%= g.text_field :genre%><br>
      <%= g.label :developer %>
      <%= g.text_field :developer%><br>
      <%= g.label :age, "Age Rating" %>
      <%= g.text_field :age%><br>
      <%= g.label :year_released, "Release Year" %> 
      <%= g.number_field :year_released%><br>
    <%end%>
  <%end%>
  <%= f.submit "Submit Review" %>
<% end %>



