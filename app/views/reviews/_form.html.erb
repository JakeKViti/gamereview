<%= form_for @review do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title%><br>

  <%= f.label :body %>
  <br>
  <%= f.text_field :body%><br>

  <%= f.label :rating %>
   <br>
   <%= f.number_field :rating%><br>

  <%if params[:game_id] != nil%>
  <%= hidden_field_tag "review[game_id]", params[:game_id]%>	
  <%else%>
  <%= hidden_field_tag "review[game_id]", @review.game_id%>	
  <%end%>


  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag "Submit Review" %>
<% end %>



